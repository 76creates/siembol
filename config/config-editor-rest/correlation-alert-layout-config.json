{
  "$..rules.items": {
    "widget": {
      "formlyConfig": {
        "type": "tabs"
      }
    }
  },
  "$..rule_description": {
    "widget": {
      "formlyConfig": {
        "type": "textarea",
        "wrappers": []
      }
    }
  },
  "$..alerts": {
    "widget": {
      "formlyConfig": {
        "wrappers": [
          "expansion-panel"
        ]
      }
    }
  },
  "$..alerts.items": {
    "widget": {
      "formlyConfig": {
        "wrappers": [
          "panel"
        ]
      }
    }
  },
  "$..rules..tags.items": {
    "widget": {
      "formlyConfig": {
        "wrappers": [
          "panel"
        ]
      }
    }
  },
  "$..max_time_lag_in_sec": {
    "widget": {
      "formlyConfig": {
        "hideExpression": "model.time_computation_type !== 'event_time'"
      }
    }
  }
}
