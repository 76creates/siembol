{
  "config_layout": {
    "$..rules.items": {
      "widget": {
        "formlyConfig": {
          "type": "tabs"
        }
      }
    },
    "$..rule_description": {
      "widget": {
        "formlyConfig": {
          "type": "textarea",
          "wrappers": []
        }
      }
    },
    "$..alerts": {
      "widget": {
        "formlyConfig": {
          "wrappers": [
            "expansion-panel"
          ]
        }
      }
    },
    "$..alerts.items": {
      "widget": {
        "formlyConfig": {
          "wrappers": [
            "panel"
          ]
        }
      }
    },
    "$..rules..tags.items": {
      "widget": {
        "formlyConfig": {
          "wrappers": [
            "panel"
          ]
        }
      }
    },
    "$..max_time_lag_in_sec": {
      "widget": {
        "formlyConfig": {
          "hideExpression": "model.time_computation_type !== 'event_time'"
        }
      }
    }
  },
  "admin_config_layout": {
    "$": {
      "widget": {
        "formlyConfig": {
          "type": "admin-tabs"
        }
      }
    },
    "$..['alerts.input.topics']": {
      "widget": {
        "formlyConfig": {
          "wrappers": [
            "expansion-panel"
          ],
          "templateOptions": {
            "genericSettingTab": "true"
          }
        }
      }
    },
    "$..['alerts.engine.clean.interval.sec']": {
      "widget": {
        "formlyConfig": {
          "hideExpression": "true"
        }
      }
    },
    "$..['alerts.engine']": {
      "enum": ["siembol_correlation_alerts"]
    }
  }
}