{
    "$..parsing_applications.items": {
        "type": "tabs"
    },
    "$..parsing_app_description": {
        "type": "textarea",
        "wrappers": []
    },
    "$..routing_parser": {
        "condition": {
            "hideExpression": "return model.parsing_app_settings.parsing_app_type !== 'router_parsing'"
        }
    },
    "$..parsers": {
        "wrappers": [
            "expansion-panel"
        ]
    },
    "$..parsers.items": {
        "wrappers": [
            "panel"
        ]
    },
    "$..default_parser": {
        "wrappers": [
            "panel"
        ]
    },
    "$..single_parser": {
        "condition": {
            "hideExpression": "return model.parsing_app_settings.parsing_app_type !== 'single_parser'"
        }
    },
    "$..metadata_prefix": {
        "condition": {
            "hideExpression": "return !model.parsing_app_settings.parse_metadata"
        }
    }
}
